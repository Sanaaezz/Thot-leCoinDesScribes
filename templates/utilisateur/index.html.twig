{% extends 'base.html.twig' %}

{% block title %}Utilisateur index{% endblock %}

{% block body %}
    <h1>Utilisateur index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Email</th>
                {# <th>Roles</th> #}
                {# <th>Password</th> #}
                <th>Rgpd_utilisateur</th>
                <th>Nom_utilisateur</th>
                <th>Nomdeplume_utilisateur</th>
                <th>Presentation_utilisateur</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for utilisateur in utilisateurs %}
            <tr>
                <td>{{ utilisateur.id }}</td>
                <td>{{ utilisateur.email }}</td>
                {# <td>{{ utilisateur.roles ? utilisateur.roles|json_encode : '' }}</td> #}
                {# <td>{{ utilisateur.password }}</td> #}
                <td>{{ utilisateur.rgpdUtilisateur ? utilisateur.rgpdUtilisateur|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ utilisateur.nomUtilisateur }}</td>
                <td>{{ utilisateur.nomdeplumeUtilisateur }}</td>
                <td>{{ utilisateur.presentationUtilisateur }}</td>
                <td>
                    <a href="{{ path('app_utilisateur_show', {'id': utilisateur.id}) }}">show</a>
                    {# <a href="{{ path('app_utilisateur_edit', {'id': utilisateur.id}) }}">edit</a> #}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    {# <a href="{{ path('app_utilisateur_new') }}">Create new</a> #}
{% endblock %}
